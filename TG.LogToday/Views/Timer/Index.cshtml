@model LogToday.Models.TimerIndexViewModel

@{
    ViewBag.Title = "Timer";
    Layout = "~/Views/Shared/_LayoutDevOops.cshtml";
}

@section styles{
    @Styles.Render(LogToday.BundleConfig.ViewsBundles.CSS_TIMER_INDEX)
}

<!--Start Breadcrumb-->
<div class="row">
    <div id="breadcrumb" class="col-xs-12">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Dashboard")</li>
            <li>@Html.ActionLink("Timer", "Index", "Timer")</li>
        </ol>
    </div>
</div>
<!--End Breadcrumb-->
<!--Start Dashboard 1-->

<div id="dashboard-header" class="row">
    <div class="col-xs-12 col-sm-12">
        <div class="box" style="opacity: 1; z-index: 1999; left: 0px; top: 0px;">
            <div class="box-header">
                <div class="box-icons">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content">
                @using (Html.BeginForm("", "", FormMethod.Post, new { role = "form" }))
                {
                    <div class="row">
                        <div class="col-xs-6 col-sm-6">
                            @Html.LabelFor(model => model.Description, "No que você está trabalhando agora?", new { @class = "sr-only" })
                            @Html.TextBoxFor(model => model.Description, new { @class = "form-control input-lg", placeholder = "No que você está trabalhando agora?" })
                        </div>
                        <div class="col-xs-3 col-sm-3">
                            @Html.LabelFor(model => model.ModuleId, "Selecione o seu módulo", new { @class = "sr-only" })
                            @Html.TextBoxFor(model => model.ModuleId, new { @class = "form-control input-lg", placeholder = "Selecione o seu módulo" })
                        </div>
                        <div class="col-xs-3 col-sm-3 col-md-3">
                            <div class="input-group pull-right">
                                @Html.LabelFor(model => model.Description, "0 minutos", new { @class = "sr-only" })
                                @Html.TextBoxFor(model => model.Minutes, new { @class = "form-control input-lg", placeholder = "00:00 min" })
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-lg btn-default"><span class="glyphicon glyphicon-floppy-disk"></span></button>
                                    <button type="button" class="btn btn-lg btn-default" style="display: none;"><span class="glyphicon glyphicon-time"></span></button>
                                    <button type="button" class="btn btn-lg btn-default"><span class="glyphicon glyphicon-wrench"></span></button>
                                </span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row-fluid">
    <div id="dashboard_tabs" class="col-xs-12 col-sm-12">
        <div id="dashboard-overview" class="row" style="visibility: visible; position: relative;">
            <div class="col-sm-12 col-md-12">
                <div class="content-wrapper  hide-rates not-pro">
                    <div id="timer-page" class="view normal-mode">
                        <div class="empty-state-region"></div>
                        <div class="joyride-region"></div>
                        <section id="time-entries-region">
                            <div class="time-entry-list row">
                                <div class="box">
                                    <div class="box-icons">
                                        <div class="btn-group">
                                            <a data-toggle="dropdown">
                                                <span class="glyphicon glyphicon-cog"></span>&nbsp;
                                                <span class="caret"></span>
                                            </a>
                                            <ul class="dropdown-menu dropdown-menu-right" role="menu">
                                                <li><a href="#">Action</a></li>
                                                <li><a href="#">Another action</a></li>
                                                <li><a href="#">Something else here</a></li>
                                                <li><a href="#">Separated link</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div>
                                        <section class="time-entries-day custom-form">
                                            <header class="timer-entries-group-header">
                                                <div class="checkbox-container">
                                                    <div class="btn-group">
                                                        <div class="btn btn-group-dropdown" style="padding-top: 2px;">
                                                            <div class="button checkbox dropdown on-hover selectAll" style="padding-right: 0px !important; padding-left: 0px;">
                                                                <div class="checkbox">
                                                                    <label>
                                                                        <input type="checkbox" class="selectAll">
                                                                        <i class="fa fa-square-o"></i>
                                                                    </label>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <button type="button" class="btn btn-group-dropdown dropdown-toggle" data-toggle="dropdown" style="height: 47px; background-color: #f8f8f8; border: 0;color: #888;">
                                                            <span class="caret"></span>
                                                            <span class="sr-only">Toggle Dropdown</span>
                                                        </button>
                                                        <ul class="dropdown-menu dropdown-menu-left" role="menu">
                                                            <li><a href="#">Excluir</a></li>
                                                        </ul>
                                                    </div>
                                                </div>
                                                <div class="date-container">
                                                    <span class="title">Segunda-feira, 12 de Outubro</span>
                                                    <span class="super">1 h 35 min</span>
                                                </div>
                                            </header>
                                            <div class="time-entries-list-container">
                                                <ul class="time-entries-list">
                                                    <li class="row">
                                                        <div class="unsynced" style="display:none;" title="Unsynced time entry">
                                                            <i class="icon-exclamation-triangle"></i>
                                                        </div>
                                                        <div class="col-xs-1">
                                                            <div class="checkbox-container col-checkbox">
                                                                <div class="btn-group">
                                                                    <div class="btn btn-group-dropdown" style="padding-top: 2px;">
                                                                        <div class="button checkbox dropdown on-hover selectAll" style="padding-right: 0px !important; padding-left: 0px;">
                                                                            <div class="checkbox">
                                                                                <label>
                                                                                    <input type="checkbox" class="selectAll">
                                                                                    <i class="fa fa-square-o"></i>
                                                                                </label>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <button type="button" class="btn dropdown-toggle" data-toggle="dropdown" style="height: 47px; background-color: #f8f8f8; border: 0;color: #888;">
                                                                        <span class="caret"></span>
                                                                        <span class="sr-only">Toggle Dropdown</span>
                                                                    </button>
                                                                    <ul class="dropdown-menu dropdown-menu-left" role="menu">
                                                                        <li><a href="#">Excluir</a></li>
                                                                    </ul>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-xs-5" style="padding-left: 0px;">
                                                            <div tabindex="7" class="description-container popdown-host for-autocomplete">
                                                                <span title="Realizado o desenvolvimento do CRUD do cadastro">Realizado o desenvolvimento do CRUD do cadastro de fornecedores</span>
                                                            </div>
                                                        </div>
                                                        <div class="col-xs-3">
                                                            <div tabindex="8" class="text-container popdown-host for-projects ">
                                                                <span class="module">
                                                                    <span class="label label-success" title="Teste">Teste</span>
                                                                </span>
                                                            </div>
                                                        </div>
                                                        <div class="col-xs-3">
                                                            <div class="col-xs-4">
                                                                <div tabindex="9" class="text-container popdown-host js-duration for-datetime">
                                                                    <span class="entry-duration"><span class="duration"><strong>1:35</strong>:36</span></span>
                                                                </div>
                                                            </div>
                                                            <div class="col-xs-8 pull-right">
                                                                <div class="time-container container"><span class="entry-time">4:02 PM – 5:38 PM</span></div>
                                                            </div>
                                                        </div>
                                                    </li>
                                                    <li class="row">
                                                        <div class="unsynced" style="display:none;" title="Unsynced time entry">
                                                            <i class="icon-exclamation-triangle"></i>
                                                        </div>
                                                        <div class="col-xs-1">
                                                            <div class="checkbox-container col-checkbox">
                                                                <div class="btn-group">
                                                                    <div class="btn btn-group-dropdown" style="padding-top: 2px;">
                                                                        <div class="button checkbox dropdown on-hover selectAll" style="padding-right: 0px !important; padding-left: 0px;">
                                                                            <div class="checkbox">
                                                                                <label>
                                                                                    <input type="checkbox" class="selectAll">
                                                                                    <i class="fa fa-square-o"></i>
                                                                                </label>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <button type="button" class="btn dropdown-toggle" data-toggle="dropdown" style="height: 47px; background-color: #f8f8f8; border: 0;color: #888;">
                                                                        <span class="caret"></span>
                                                                        <span class="sr-only">Toggle Dropdown</span>
                                                                    </button>
                                                                    <ul class="dropdown-menu dropdown-menu-left" role="menu">
                                                                        <li><a href="#">Action</a></li>
                                                                        <li><a href="#">Another action</a></li>
                                                                        <li><a href="#">Something else here</a></li>
                                                                        <li class="divider"></li>
                                                                        <li><a href="#">Separated link</a></li>
                                                                    </ul>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-xs-5" style="padding-left: 0px;">
                                                            <div tabindex="7" class="description-container popdown-host for-autocomplete">
                                                                <span title="Realizado parcialmente o desenvolvimento">Realizado parcialmente o desenvolvimento da tela de clientes</span>
                                                            </div>
                                                        </div>
                                                        <div class="col-xs-3">
                                                            <div tabindex="8" class="text-container popdown-host for-projects ">
                                                                <span class="module">
                                                                    <span class="label label-success" title="Cadastro de fornecedores">Cadastro de fornecedores</span>
                                                                </span>
                                                            </div>
                                                        </div>
                                                        <div class="col-xs-3">
                                                            <div class="col-xs-4">
                                                                <div tabindex="9" class="text-container popdown-host js-duration for-datetime">
                                                                    <span class="entry-duration"><span class="duration"><strong>1:35</strong>:36</span></span>
                                                                </div>
                                                            </div>
                                                            <div class="col-xs-8 pull-right">
                                                                <div class="time-container container"><span class="entry-time">4:02 PM – 5:38 PM</span></div>
                                                            </div>
                                                        </div>
                                                    </li>
                                                </ul>
                                            </div>
                                        </section>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>

<div class="row">
    <div class="load-more">
        <a href="#" id="loadMoreButton" class="button">Carregar mais</a>
    </div>
</div>

@section scripts {
    @Scripts.Render(LogToday.BundleConfig.ViewsBundles.JS_TIMER_INDEX)
    <script type="text/javascript">
        $(document).ready(function () {
            $("#ModuleId").select2();
        });
    </script>
}





